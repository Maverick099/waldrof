{
  "name": "waldrof",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@sap/cds": "^9",
    "@sap/xssec": "^4",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/cds-typer": ">=0.1",
    "@cap-js/cds-types": "^0.14.0",
    "@cap-js/sqlite": "^2.0.2",
    "@sap/cds-dk": "^9.3.1",
    "@sap/eslint-plugin-cds": "^4.1.0",
    "@sap/eslint-plugin-ui5-jsdocs": "^2.0.8",
    "@sapui5/ts-types": "^1.140.0",
    "@types/node": "^24.3.3",
    "cds-plugin-ui5": "^0.13.4",
    "eslint": "^9",
    "jest": "^30.1.3",
    "jsdoc": "^4.0.4",
    "tsx": "^4",
    "typescript": "^5.9.2"
  },
  "scripts": {
    "start": "cds-serve",
    "build": "mbt build -t gen --mtar mta.tar",
    "lint": "npx eslint .",
    "docs": "jsdoc -c jsdoc.config.json",
    "watch:illustrationexplorer": "cds watch --open waldrof.app.illustrationexplorer/index.html?sap-ui-xx-viewCache=false --livereload false",
    "watch:launchpad": "cds watch --open waldrof.app.launchpad/index.html?sap-ui-xx-viewCache=false --livereload false",
    "watch:admin": "cds watch --open waldrof.app.admin/index.html?sap-ui-xx-viewCache=false --livereload true"
  },
  "private": true,
  "imports": {
    "#cds-models/*": "./@cds-models/*/index.js"
  },
  "workspaces": [
    "app/*"
  ],
  "cds": {
    "requires": {
      "destinations": true,
      "connectivity": true,
      "[production]": {
        "auth": "xsuaa"
      }
    }
  }
}
