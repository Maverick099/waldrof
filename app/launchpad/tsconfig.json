{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "skipLibCheck": true,
    "allowJs": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "nodenext",
    "rootDir": "./webapp",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "waldrof/app/launchpad/*": [
        "./webapp/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@sapui5/types",
      "../../node_modules/@types",
      "../../node_modules/@sapui5/types"
    ]
  },
  "include": [
    "./webapp/**/*"
  ]
}
